@page
@using LegalData.Model
@model Legal.RegLawyerModel
@{
    ViewData["Title"] = "RegLawyer";
    Layout = null;
}

<!DOCTYPE HTML>
<html>

<head>

    <!-- Meta tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Assistance Enroll Form Responsive Widget,Login form widgets, Sign up Web forms , Login signup Responsive web form,Flat Pricing table,Flat Drop downs,Registration Forms,News letter Forms,Elements" />
    <script type="application/x-javascript">
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!-- //Meta tags -->
    <!-- Stylesheet -->
    <link href="~/regLawyer/css/style.css" rel='stylesheet' type='text/css' />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- //Stylesheet -->
    <!--fonts-->
    <link href="//fonts.googleapis.com/css?family=Josefin+Sans:300,400,600,700" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">

    <!--//fonts-->
</head>

<body class="pt-5">
    <!--background-->
    <h1>Registration Form</h1>
    <div class="bg-w3layouts-main">
        <h2>Fill out the form to enroll our service</h2>
        <div class="form-content-agileinfo">
            <form  method="post">


                <div class="main-divs-agileits-w3layouts">
                    <div class="bottom-w3-agileits-space form-text1">
                        <input asp-for="Lawyer.Name" placeholder="Full Name" required="">
                        <span class="text-danger" asp-validation-for="Lawyer.Name"></span>
                    </div>
                    <div class="bottom-w3-agileits-space form-text2">
                        <input asp-for="Lawyer.Email" placeholder="Email" required="">
                        <span class="text-danger" asp-validation-for="Lawyer.Email"></span>
                    </div>
                </div>


                <div class="main-divs-agileits-w3layouts">
                    <div class="bottom-w3-agileits-space form-text1">
                        <input asp-for="Lawyer.Location" placeholder="Location" required="">
                        <span class="text-danger" asp-validation-for="Lawyer.Location"></span>
                    </div>
                    <div class="bottom-w3-agileits-space form-text2">

                        <select class="bottom-w3-agileits-space form-text2 w-100 h-100" asp-for="Lawyer.Service" asp-items="Html.GetEnumSelectList<Services>()">
                        </select>

                        <span class="text-danger" asp-validation-for="Lawyer.Service"></span>
                    </div>
                </div>


                <div class="main-divs-agileits-w3layouts">
                    <div class="bottom-w3-agileits-space form-text2">
                        <select class="bottom-w3-agileits-space form-text2 w-100 h-100" asp-for="Lawyer.Package" asp-items="Html.GetEnumSelectList<Package>()">
                        </select>
                        <span class="text-danger" asp-validation-for="Lawyer.Package"></span>
                    </div>
                    <div class="bottom-w3-agileits-space form-text2">
                        <input asp-for="Lawyer.Contact" placeholder="Phone Number" required="">
                        <span class="text-danger" asp-validation-for="Lawyer.Package"></span>
                    </div>
                </div>


                @*<select id="country1" onchange="change_country(this.value)" class="frm-field required sect">
            <option value="">Country</option>
            <option value="">Argentina</option>
            <option value="">Brazil</option>
            <option value="">Canada</option>
            <option value="">Denmark</option>
            <option value="">France</option>
        </select>*@
                @*</div>*@
                <div class="main-divs-agileits-w3layouts">
                    <div class="bottom-w3-agileits-space form-text1">
                        <input asp-for="Lawyer.Age" placeholder="Age" required="" class="frm-field required sect w-100" id="country1">
                    </div>

                    <div class="bottom-w3-agileits-space form-text2">
                        <input asp-for="Lawyer.Category" placeholder="Category" class="bottom-w3-agileits-space form-text2 w-100" required="">
                    
                        </div>
                </div>
                <div class="bottom-text-wthree">
                    <h6>May we send information about us to the mailing address that you provided?</h6>
                    <ul class="radio-section">
                        <li>
                            <input type="radio" id="a-option" name="selector1">
                            <label for="a-option">Yes</label>
                            <div class="check"></div>
                        </li>
                        <li>
                            <input type="radio" id="b-option" name="selector1">
                            <label for="b-option">No</label>
                            <div class="check">
                                <div class="inside"></div>
                            </div>
                        </li>
                    </ul>
                    <div class="clear"></div>
                </div>
                <input type="submit" value="Submit">
                <div class="clear"></div>
            </form>
        </div>
    </div>



</body>

</html>

